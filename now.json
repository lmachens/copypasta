{
  "name": "copypasta",
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@now/static-build" },
    { "src": "index.js", "use": "@now/node-server" }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/client/build/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "DB_URL": "@db_url",
    "DB_NAME": "@db_name"
  }
}
